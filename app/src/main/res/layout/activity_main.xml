<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amal.labelprinter.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout">
        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.0dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateMy"
            android:focusable="false"/>
        <TextView
            android:text="Item number (5-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.0dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemNumber"
            android:maxLength="5" />
        <TextView
            android:text="Case count (3-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caseCount"
            android:inputType="number"
            android:maxLength="3" />
        <TextView
            android:text="Skid number (2-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skidNumber"
            android:inputType="number"
            android:maxLength="2" />
        <TextView
            android:text="Parallelizer initials (2-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parallelizer"
            android:inputType="textCapCharacters"
            android:maxLength="2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/printlayout"
            android:gravity="center_horizontal">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privewlayout"
            android:gravity="center_horizontal">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:gravity="center_horizontal"
            android:weightSum="2">
            <Button
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:text="Preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previewBtn" />
            <Button
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:text="Print "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/printBtn" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
