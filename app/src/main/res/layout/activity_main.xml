<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amal.labelprinter.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.0dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateMy"
            android:focusable="false"/>
        <TextView
            android:text="Item number (5-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.0dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemNumber"
            android:maxLength="5" />
        <TextView
            android:text="Case count (3-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caseCount"
            android:inputType="number"
            android:maxLength="3" />
        <TextView
            android:text="Skid number (2-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skidNumber"
            android:inputType="number"
            android:maxLength="2" />
        <TextView
            android:text="Parallelizer initials (2-characters)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parallelizer"
            android:inputType="textCapCharacters"
            android:maxLength="2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/previewImg" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableLayout1"
                android:background="@android:color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal"
                        android:text="Item#"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:id="@+id/itemId"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal"
                        android:text="Case Count"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:id="@+id/caseCountId"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal"
                        android:text="Skid Count"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:text="text"
                        android:id="@+id/skidCountId"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal"
                        android:text="Prod Date"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:id="@+id/prodDateId"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal"
                        android:text="Palletizers initial"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/palletizersinitialId"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:gravity="center_horizontal"
            android:weightSum="2">
            <Button
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:text="Preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previewBtn" />
            <Button
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:text="Print "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/printBtn" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
